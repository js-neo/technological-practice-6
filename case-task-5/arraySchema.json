{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "tasks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "description": { "type": "string" },
          "completed": { "type": "boolean" }
        },
        "required": ["description", "completed"]
      }
    }
  },
  "required": ["tasks"]
}
